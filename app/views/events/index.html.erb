<div class="container">


<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Date</th>
      <th>Time</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user.email %></td>
        <td><%= event.name %></td>
        <td><%= event.date.strftime("%x") %></td>
        <td><%= event.time.strftime("%I:%M %p") %></td>
        <td><%= link_to 'Details', event, class: "reverse" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: "reverse" %></td>
        <td><%= link_to 'Send Invites', new_event_invite_path(event), class: "reverse" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "reverse" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class: "reverse" %>
</div>
