<!DOCTYPE html>
<html>
  <head>
    <title>LoserParty2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
       <a class="navbar-brand">LoserParty</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if current_user %>
          <li class="nav-link active"><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
          <li class="nav-link active"><%= link_to 'My Invites', invites_my_invites_path %></li>
          <li class="nav-link active"><%= link_to 'My Events', events_path %></li>
          <li class="nav-link active"><%= link_to 'Upcoming Events', invites_accepted_invites_path %></li>
          <% else %>
          <li class="nav-link active"><%= link_to "Login", new_user_session_path %></li>
          <li class="nav-link active toggle-right"><%= link_to "Sign Up", new_user_registration_path %></li>
          <% end %>
        </ul>
      <div>
      <!-- <% if current_user %>
        <div class="container">
          <ul class="nav nav-tabs">
            <li><%= link_to 'My Invites', invites_my_invites_path %></li>
          </ul>
        </div>
      <% end %> -->
    </nav>
    <%= yield %>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
  </body>

</html>
